{
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "externalid": {
          "registration": {
            "clientIdSettingName": "OIDC_CLIENT_ID",
            "clientSecretSettingName": "OIDC_CLIENT_SECRET",
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://payrollextid.ciamlogin.com/payrollextid.onmicrosoft.com/v2.0/.well-known/openid-configuration"
            }
          },
          "login": { "scopes": ["openid","profile","email"] },
          "userIdClaim": "sub"
        }
      }
    }
  },
  "routes": [
    { "route": "/*", "allowedRoles": ["authenticated"] },
  ],
  "responseOverrides": {
    "401": { "statusCode": 302, "redirect": "/.auth/login/externalid?post_login_redirect_uri=/" }
  },
  "navigationFallback": { "rewrite": "/index.html" }
}
